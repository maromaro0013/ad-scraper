!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AdScraper
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    - unless [ "create", "update" ].include?(params[:action])
      = stylesheet_link_tag    "controllers/#{params[:controller]}/#{params[:action]}", media: 'all'
      = javascript_include_tag "controllers/#{params[:controller]}/#{params[:action]}"
  %body
    = yield
